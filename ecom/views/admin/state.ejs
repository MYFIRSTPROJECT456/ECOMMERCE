<script>

			$(document).ready(function() {
    	var table = $('#data-table').DataTable();

     $('#data-table tbody').on('click', 'tr', function() {
                    var id = table.row(this).id();
                       var data = table.row(this).data();
                       // alert(data);
                      stateid = id;
                       $("input[name='sid']").val(data[0]);
                       $("input[name='sname']").val(data[1]);
                     // alert(stateid);
                       if(stateid){
                           $('#modal-dialog').modal('show');
                          }
                          // alert();
                });
		} );

      function onValidate() {
                // alert("funcntion called");
                    var form = $('#formf');
                    // alert(JSON.stringify(form));
                    //form.parsley().validate();
                    if (form) {
                        //                alert('valid');
                        var formdata = $('#formf').serializeArray();
                        //structure json
                                       // alert('formdata'+JSON.stringify(formdata));
                        var data = formdata.reduce(function(a, x) {
                            a[x.name] = x.value;
                            return a;
                        }, {});
                        // alert(data);
                        Screenfields.push(data);
                        //                alert("screenfields"+JSON.stringify(Screenfields));
                        $.ajax({
                            type: "POST",
                            url: "/admin/state/adddata",
                            timeout: 6000,
                            contentType: 'application/json',
                            data: JSON.stringify({
                            formdata: JSON.stringify(Screenfields,), id:tblclick
                            }),
                            success: function(data) {
                              // alert(JSON.stringify(data));
                                var fdata = JSON.parse(JSON.stringify(data));
                                if (fdata.status == '0') {
                                    Screenfields = [];
                                    alert("Data saved successfully");
                                    $('#formf').trigger("reset");
                                    $('#modal-dialog').modal('hide');
                                    window.location.reload();
                                } else {
                                    // alert(fdata.status_msg);
                                    alert("Please select the proper details");
                                    Screenfields = [];
                                }
                            },
                            error: function(xhr, status, error) {
                                //                        alert(status+" "+error.Message+" "+xhr.responseText);
                                Screenfields = [];
                            }
                        });
                    } else {
                        // alert('Form not valid');
                    }
                };


function onDelete() {
                    // alert('1');
                          $.ajax({
                            type: "POST",
                            url: "/admin/state/delete",
                            timeout: 6000,
                            contentType: 'application/json',
                            data: JSON.stringify({
                                stateid: stateid
                            }),
                            success: function(data) {
                              // alert('2');
                              var fdata = JSON.parse(JSON.stringify(data));
                              if (fdata.status == '0') {
                               
                                alert("Task deleted");
                                $('#modal-dialog').modal('hide');
                                location.reload();
                            } else {
                                alert(formdata.status_msg);
                            }
                           },error:function(xhr, status,error){
                            alert('error json');
                            } 
                         });
                      };
		$('[data-toggle="tooltip"]').tooltip();
		$('[data-toggle="tooltip"]').tooltip();

